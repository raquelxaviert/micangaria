<div class="product-card card">
  <a href="{{ product.url }}" style="text-decoration: none; color: inherit;">
    <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" style="width: 100%; border-radius: 8px; margin-bottom: 1em;" />
    <h3 class="headline" style="font-size: 1.2em; margin-bottom: 0.5em;">{{ product.title }}</h3>
    <p style="margin-bottom: 0.5em; font-weight: 600; color: {{ settings.primary_color }};">{{ product.price | money }}</p>
    <form action="/cart/add" method="post">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}">
      <button type="submit" class="btn-primary" style="width: 100%; margin-top: 0.5em;">Adicionar ao carrinho</button>
    </form>
  </a>
</div>
