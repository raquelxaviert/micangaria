<div class="collection-detail" style="max-width: 1200px; margin: 0 auto; padding: 3em 1em;">
  <h1 class="headline" style="font-size: 2.2em; margin-bottom: 1em; color: {{ settings.primary_color }}; text-align: center;">{{ collection.title }}</h1>
  <p style="max-width: 700px; margin: 0 auto 2em auto; text-align: center; color: {{ settings.text_color }};">{{ collection.description }}</p>
  <div class="product-grid" style="display: flex; flex-wrap: wrap; gap: 2em; justify-content: center;">
    {% for product in collection.products %}
      {% render 'product-card', product: product %}
    {% else %}
      <p style="text-align: center; width: 100%;">Nenhum produto encontrado nesta coleção.</p>
    {% endfor %}
  </div>
</div>
