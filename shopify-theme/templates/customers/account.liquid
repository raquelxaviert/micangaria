{% comment %}
  Template de conta do cliente - mantendo o design sofisticado do miçangaria
{% endcomment %}

<div class="container py-16">
  <div class="max-w-4xl mx-auto">
    
    <!-- Cabeçalho da conta -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
      <div>
        <h1 class="font-headline text-3xl text-primary mb-2">
          Olá, {{ customer.first_name }}!
        </h1>
        <p class="text-muted-foreground">
          Gerencie suas informações e pedidos
        </p>
      </div>
      
      <div class="mt-4 md:mt-0">
        <a href="{{ routes.account_logout_url }}" 
           class="btn btn-ghost">
          <i data-lucide="log-out" style="width: 1rem; height: 1rem; margin-right: 0.5rem;"></i>
          Sair
        </a>
      </div>
    </div>

    <!-- Grid principal -->
    <div class="grid md:grid-cols-3 gap-8">
      
      <!-- Sidebar de navegação -->
      <div class="md:col-span-1">
        <nav class="account-nav card p-6">
          <h2 class="font-headline text-lg text-primary mb-4">
            Minha Conta
          </h2>
          
          <ul class="space-y-2">
            <li>
              <a href="{{ routes.account_url }}" 
                 class="nav-item {% if template == 'customers/account' %}active{% endif %}">
                <i data-lucide="user" style="width: 1rem; height: 1rem;"></i>
                <span>Perfil</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.account_url }}#orders" 
                 class="nav-item">
                <i data-lucide="package" style="width: 1rem; height: 1rem;"></i>
                <span>Meus Pedidos</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.account_addresses_url }}" 
                 class="nav-item">
                <i data-lucide="map-pin" style="width: 1rem; height: 1rem;"></i>
                <span>Endereços</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.account_url }}#wishlist" 
                 class="nav-item">
                <i data-lucide="heart" style="width: 1rem; height: 1rem;"></i>
                <span>Lista de Desejos</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Conteúdo principal -->
      <div class="md:col-span-2">
        
        <!-- Informações do perfil -->
        <div class="card p-6 mb-8">
          <div class="flex items-center justify-between mb-6">
            <h2 class="font-headline text-xl text-primary">
              Informações Pessoais
            </h2>
            <a href="{{ routes.account_url }}/edit" 
               class="btn btn-secondary btn-sm">
              <i data-lucide="edit" style="width: 0.875rem; height: 0.875rem; margin-right: 0.25rem;"></i>
              Editar
            </a>
          </div>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-muted-foreground mb-1">
                Nome
              </label>
              <p class="text-foreground">
                {{ customer.first_name }} {{ customer.last_name }}
              </p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-muted-foreground mb-1">
                E-mail
              </label>
              <p class="text-foreground">
                {{ customer.email }}
              </p>
            </div>
            
            {% if customer.default_address %}
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-muted-foreground mb-1">
                  Endereço Principal
                </label>
                <p class="text-foreground">
                  {{ customer.default_address.address1 }}
                  {% if customer.default_address.address2 != blank %}, {{ customer.default_address.address2 }}{% endif %}<br>
                  {{ customer.default_address.city }}, {{ customer.default_address.province }} {{ customer.default_address.zip }}<br>
                  {{ customer.default_address.country }}
                </p>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Estatísticas rápidas -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
          <div class="stat-card">
            <div class="stat-icon">
              <i data-lucide="package" style="width: 1.5rem; height: 1.5rem;"></i>
            </div>
            <div class="stat-number">{{ customer.orders_count }}</div>
            <div class="stat-label">Pedidos</div>
          </div>
          
          <div class="stat-card">
            <div class="stat-icon">
              <i data-lucide="heart" style="width: 1.5rem; height: 1.5rem;"></i>
            </div>
            <div class="stat-number">0</div>
            <div class="stat-label">Favoritos</div>
          </div>
          
          <div class="stat-card">
            <div class="stat-icon">
              <i data-lucide="map-pin" style="width: 1.5rem; height: 1.5rem;"></i>
            </div>
            <div class="stat-number">{{ customer.addresses_count }}</div>
            <div class="stat-label">Endereços</div>
          </div>
          
          <div class="stat-card">
            <div class="stat-icon">
              <i data-lucide="calendar" style="width: 1.5rem; height: 1.5rem;"></i>
            </div>
            <div class="stat-number">{{ customer.created_at | date: "%Y" }}</div>
            <div class="stat-label">Cliente desde</div>
          </div>
        </div>

        <!-- Pedidos recentes -->
        <div class="card p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="font-headline text-xl text-primary">
              Pedidos Recentes
            </h2>
            {% if customer.orders_count > 3 %}
              <a href="{{ routes.account_url }}#orders" 
                 class="text-secondary hover:text-primary transition-colors text-sm">
                Ver todos →
              </a>
            {% endif %}
          </div>
          
          {% if customer.orders.size > 0 %}
            <div class="space-y-4">
              {% for order in customer.orders limit: 3 %}
                <div class="order-item">
                  <div class="flex items-center justify-between">
                    <div>
                      <h3 class="font-medium text-foreground">
                        Pedido #{{ order.name }}
                      </h3>
                      <p class="text-sm text-muted-foreground">
                        {{ order.created_at | date: "%d/%m/%Y" }}
                      </p>
                    </div>
                    
                    <div class="text-right">
                      <p class="font-medium text-foreground">
                        {{ order.total_price | money }}
                      </p>
                      <span class="order-status order-status-{{ order.fulfillment_status | default: 'unfulfilled' }}">
                        {{ order.fulfillment_status | default: 'Processando' }}
                      </span>
                    </div>
                  </div>
                  
                  {% if order.line_items.size > 0 %}
                    <div class="order-items mt-3">
                      {% for item in order.line_items limit: 2 %}
                        <div class="flex items-center gap-3 text-sm">
                          <div class="order-item-image">
                            {% if item.image %}
                              <img src="{{ item.image | img_url: '50x50' }}" 
                                   alt="{{ item.title }}"
                                   loading="lazy">
                            {% else %}
                              <div class="placeholder-image">
                                <i data-lucide="image" style="width: 1rem; height: 1rem;"></i>
                              </div>
                            {% endif %}
                          </div>
                          <div>
                            <p class="text-foreground">{{ item.title }}</p>
                            <p class="text-muted-foreground">Qtd: {{ item.quantity }}</p>
                          </div>
                        </div>
                      {% endfor %}
                      
                      {% if order.line_items.size > 2 %}
                        <p class="text-xs text-muted-foreground mt-2">
                          +{{ order.line_items.size | minus: 2 }} item(s) a mais
                        </p>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% else %}
            <div class="text-center py-8">
              <i data-lucide="package-open" class="text-muted-foreground mx-auto mb-4" style="width: 3rem; height: 3rem;"></i>
              <h3 class="font-headline text-lg text-primary mb-2">
                Nenhum pedido ainda
              </h3>
              <p class="text-muted-foreground mb-6">
                Que tal começar explorando nossa coleção?
              </p>
              <a href="/collections/all" class="btn btn-primary">
                <i data-lucide="shopping-bag" style="width: 1rem; height: 1rem; margin-right: 0.5rem;"></i>
                Ver Produtos
              </a>
            </div>
          {% endif %}
        </div>

      </div>
    </div>
  </div>
</div>

<style>
  .account-nav .nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 0.375rem;
    color: hsl(var(--foreground));
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.875rem;
  }
  
  .account-nav .nav-item:hover,
  .account-nav .nav-item.active {
    background-color: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
  }
  
  .stat-card {
    background-color: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .stat-card:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }
  
  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background-color: hsl(var(--primary) / 0.1);
    border-radius: 50%;
    color: hsl(var(--primary));
    margin: 0 auto 1rem;
  }
  
  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: hsl(var(--foreground));
    margin-bottom: 0.25rem;
  }
  
  .stat-label {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .order-item {
    padding: 1rem;
    border: 1px solid hsl(var(--border));
    border-radius: 0.5rem;
    background-color: hsl(var(--background));
  }
  
  .order-status {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }
  
  .order-status-fulfilled {
    background-color: hsl(var(--secondary) / 0.1);
    color: hsl(var(--secondary));
  }
  
  .order-status-unfulfilled {
    background-color: hsl(var(--muted) / 0.3);
    color: hsl(var(--muted-foreground));
  }
  
  .order-status-partial {
    background-color: hsl(var(--accent) / 0.1);
    color: hsl(var(--accent-foreground));
  }
  
  .order-item-image {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.375rem;
    overflow: hidden;
    background-color: hsl(var(--muted) / 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .order-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .placeholder-image {
    color: hsl(var(--muted-foreground));
  }
  
  .order-items {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Inicializar ícones Lucide
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  });
</script>
