{% comment %}
  Template de login - mantendo o design sofisticado do miçangaria
{% endcomment %}

<div class="container py-16">
  <div class="max-w-md mx-auto">
    
    <!-- Cabeçalho -->
    <div class="text-center mb-8">
      <div class="mb-4">
        <i data-lucide="user-circle" class="text-primary mx-auto" style="width: 3rem; height: 3rem;"></i>
      </div>
      <h1 class="font-headline text-3xl text-primary mb-2">
        Entrar na Conta
      </h1>
      <p class="text-muted-foreground">
        Acesse sua conta miçangaria
      </p>
    </div>

    <!-- Formulário de login -->
    <div class="card p-8">
      {% form 'customer_login' %}
        
        {% if form.errors %}
          <div class="alert alert-error mb-6">
            <div class="flex items-center">
              <i data-lucide="alert-circle" style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;"></i>
              <span class="font-medium">Erro no login</span>
            </div>
            <ul class="mt-2 text-sm">
              {% for error in form.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <div class="space-y-6">
          <!-- Email -->
          <div>
            <label for="CustomerEmail" class="block text-sm font-medium text-foreground mb-2">
              E-mail
            </label>
            <div class="relative">
              <input 
                type="email" 
                name="customer[email]" 
                id="CustomerEmail"
                class="form-input w-full"
                placeholder="seu.email@exemplo.com"
                autocomplete="email"
                {% if form.email %}value="{{ form.email }}"{% endif %}
                required
              >
              <i data-lucide="mail" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-muted-foreground" style="width: 1rem; height: 1rem;"></i>
            </div>
          </div>

          <!-- Senha -->
          <div>
            <label for="CustomerPassword" class="block text-sm font-medium text-foreground mb-2">
              Senha
            </label>
            <div class="relative">
              <input 
                type="password" 
                name="customer[password]" 
                id="CustomerPassword"
                class="form-input w-full"
                placeholder="••••••••"
                autocomplete="current-password"
                required
              >
              <i data-lucide="lock" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-muted-foreground" style="width: 1rem; height: 1rem;"></i>
            </div>
          </div>

          <!-- Botão de login -->
          <button type="submit" class="btn btn-primary w-full btn-lg">
            <i data-lucide="log-in" style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;"></i>
            Entrar
          </button>
        </div>

      {% endform %}

      <!-- Links auxiliares -->
      <div class="text-center mt-6 space-y-3">
        <a href="#recover" 
           id="RecoverPassword" 
           class="text-secondary hover:text-primary transition-colors text-sm">
          Esqueci minha senha
        </a>
        
        <div class="border-t border-border pt-4">
          <p class="text-muted-foreground text-sm mb-3">
            Ainda não tem uma conta?
          </p>
          <a href="{{ routes.account_register_url }}" 
             class="btn btn-secondary w-full">
            <i data-lucide="user-plus" style="width: 1rem; height: 1rem; margin-right: 0.5rem;"></i>
            Criar Conta
          </a>
        </div>
      </div>
    </div>

    <!-- Formulário de recuperação de senha (inicialmente oculto) -->
    <div id="RecoverPasswordForm" class="card p-8 mt-6" style="display: none;">
      <div class="text-center mb-6">
        <h2 class="font-headline text-xl text-primary mb-2">
          Recuperar Senha
        </h2>
        <p class="text-muted-foreground text-sm">
          Digite seu e-mail para receber instruções de recuperação
        </p>
      </div>

      {% form 'recover_customer_password' %}
        
        {% if form.posted_successfully? %}
          <div class="alert alert-success mb-6">
            <div class="flex items-center">
              <i data-lucide="check-circle" style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;"></i>
              <span class="font-medium">E-mail enviado!</span>
            </div>
            <p class="mt-2 text-sm">
              Verifique sua caixa de entrada para instruções de recuperação.
            </p>
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="alert alert-error mb-6">
            <div class="flex items-center">
              <i data-lucide="alert-circle" style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;"></i>
              <span class="font-medium">Erro</span>
            </div>
            <ul class="mt-2 text-sm">
              {% for error in form.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <div class="space-y-4">
          <div>
            <label for="RecoverEmail" class="block text-sm font-medium text-foreground mb-2">
              E-mail
            </label>
            <input 
              type="email" 
              name="email" 
              id="RecoverEmail"
              class="form-input w-full"
              placeholder="seu.email@exemplo.com"
              autocomplete="email"
              required
            >
          </div>

          <div class="flex gap-3">
            <button type="submit" class="btn btn-primary flex-1">
              <i data-lucide="mail" style="width: 1rem; height: 1rem; margin-right: 0.5rem;"></i>
              Enviar
            </button>
            <button type="button" 
                    id="HideRecoverPasswordLink" 
                    class="btn btn-ghost">
              Cancelar
            </button>
          </div>
        </div>

      {% endform %}
    </div>

  </div>
</div>

<!-- Estilos específicos para formulários -->
<style>
  .form-input {
    padding: 0.75rem 1rem;
    padding-right: 2.5rem;
    border: 1px solid hsl(var(--border));
    border-radius: 0.5rem;
    background-color: hsl(var(--background));
    color: hsl(var(--foreground));
    font-size: 0.875rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  
  .form-input:focus {
    outline: none;
    border-color: hsl(var(--primary));
    box-shadow: 0 0 0 3px hsl(var(--ring) / 0.2);
  }
  
  .alert {
    padding: 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
  }
  
  .alert-error {
    background-color: hsl(var(--destructive) / 0.1);
    border: 1px solid hsl(var(--destructive) / 0.2);
    color: hsl(var(--destructive-foreground));
  }
  
  .alert-success {
    background-color: hsl(var(--secondary) / 0.1);
    border: 1px solid hsl(var(--secondary) / 0.2);
    color: hsl(var(--secondary-foreground));
  }
</style>

<script>
  // Funcionalidade para mostrar/esconder formulário de recuperação
  document.addEventListener('DOMContentLoaded', function() {
    const recoverLink = document.getElementById('RecoverPassword');
    const hideRecoverLink = document.getElementById('HideRecoverPasswordLink');
    const recoverForm = document.getElementById('RecoverPasswordForm');
    
    if (recoverLink && recoverForm && hideRecoverLink) {
      recoverLink.addEventListener('click', function(e) {
        e.preventDefault();
        recoverForm.style.display = 'block';
        recoverLink.style.display = 'none';
      });
      
      hideRecoverLink.addEventListener('click', function() {
        recoverForm.style.display = 'none';
        recoverLink.style.display = 'block';
      });
    }
    
    // Inicializar ícones Lucide
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  });
</script>
