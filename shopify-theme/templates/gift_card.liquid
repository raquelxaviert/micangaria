{% comment %}
  Gift card template for miçangaria
{% endcomment %}

<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.primary_color }}">
  
  <title>{{ 'gift_cards.issued.title' | t: value: formatted_initial_value, shop: shop.name }}</title>
  
  <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
  
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  
  <!-- Theme CSS -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  
  <style>
    :root {
      --primary: 25 53% 55%; /* #D4843E - terracota */
      --primary-foreground: 0 0% 100%;
      --secondary: 156 26% 33%; /* #3B6B4A - verde */
      --secondary-foreground: 0 0% 100%;
      --accent: 25 32% 24%; /* #4C3B27 - marrom escuro */
      --accent-foreground: 0 0% 100%;
      --background: 46 44% 94%; /* #F7F3ED - branco cru */
      --foreground: 25 32% 24%;
      --card: 0 0% 100%;
      --card-foreground: 25 32% 24%;
      --border: 25 20% 85%;
      --input: 25 20% 85%;
      --muted: 46 30% 90%;
      --muted-foreground: 25 15% 45%;
      --destructive: 0 70% 50%;
      --destructive-foreground: 0 0% 100%;
    }

    .gift-card-page {
      min-height: 100vh;
      background: linear-gradient(135deg, hsl(var(--background)) 0%, hsl(var(--muted)) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem 1rem;
    }

    .gift-card-container {
      background: hsl(var(--card));
      border-radius: 1.5rem;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      max-width: 32rem;
      width: 100%;
      overflow: hidden;
      position: relative;
    }

    .gift-card-header {
      background: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--secondary)) 100%);
      color: white;
      padding: 3rem 2rem 2rem;
      text-align: center;
      position: relative;
    }

    .gift-card-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="50" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="30" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
      pointer-events: none;
    }

    .gift-card-logo {
      font-family: 'Playfair Display', serif;
      font-size: 2.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      position: relative;
      z-index: 1;
    }

    .gift-card-title {
      font-size: 1.25rem;
      margin-bottom: 1rem;
      opacity: 0.9;
      position: relative;
      z-index: 1;
    }

    .gift-card-value {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      position: relative;
      z-index: 1;
    }

    .gift-card-body {
      padding: 2rem;
    }

    .gift-card-code {
      background: hsl(var(--muted));
      border: 2px dashed hsl(var(--border));
      border-radius: 0.75rem;
      padding: 1.5rem;
      text-align: center;
      margin-bottom: 2rem;
      position: relative;
    }

    .gift-card-code-label {
      font-size: 0.875rem;
      color: hsl(var(--muted-foreground));
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .gift-card-code-value {
      font-family: 'Courier New', monospace;
      font-size: 1.25rem;
      font-weight: 600;
      color: hsl(var(--foreground));
      letter-spacing: 0.1em;
      word-break: break-all;
    }

    .copy-button {
      position: absolute;
      top: 0.75rem;
      right: 0.75rem;
      background: hsl(var(--card));
      border: 1px solid hsl(var(--border));
      border-radius: 0.5rem;
      padding: 0.5rem;
      cursor: pointer;
      transition: all 0.3s ease;
      color: hsl(var(--muted-foreground));
    }

    .copy-button:hover {
      background: hsl(var(--primary));
      color: white;
      border-color: hsl(var(--primary));
    }

    .gift-card-info {
      background: hsl(var(--muted) / 0.5);
      border-radius: 0.75rem;
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .info-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }

    .info-item:last-child {
      margin-bottom: 0;
    }

    .info-label {
      color: hsl(var(--muted-foreground));
      font-size: 0.875rem;
    }

    .info-value {
      color: hsl(var(--foreground));
      font-weight: 500;
    }

    .gift-card-actions {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .btn {
      flex: 1;
      min-width: fit-content;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 500;
      text-decoration: none;
      text-align: center;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      border: none;
    }

    .btn-primary {
      background: hsl(var(--primary));
      color: hsl(var(--primary-foreground));
    }

    .btn-primary:hover {
      background: hsl(var(--primary) / 0.9);
    }

    .btn-outline {
      background: transparent;
      color: hsl(var(--foreground));
      border: 1px solid hsl(var(--border));
    }

    .btn-outline:hover {
      background: hsl(var(--muted));
    }

    .decorative-pattern {
      position: absolute;
      top: -2rem;
      right: -2rem;
      width: 8rem;
      height: 8rem;
      background: radial-gradient(circle, rgba(255,255,255,0.1) 2px, transparent 2px);
      background-size: 1rem 1rem;
      border-radius: 50%;
      opacity: 0.3;
    }

    @media print {
      .gift-card-page {
        background: white;
        padding: 0;
      }
      
      .gift-card-actions {
        display: none;
      }
    }
  </style>
</head>

<body class="gift-card-page">
  <div class="gift-card-container">
    <!-- Decorative Pattern -->
    <div class="decorative-pattern"></div>
    
    <!-- Gift Card Header -->
    <div class="gift-card-header">
      <h1 class="gift-card-logo">miçangaria</h1>
      <p class="gift-card-title">Vale Presente</p>
      <div class="gift-card-value">{{ gift_card.balance | money }}</div>
      {% if gift_card.enabled == false or gift_card.expired %}
        <p style="color: rgba(255,255,255,0.8); font-size: 0.875rem; margin-top: 0.5rem;">
          {% if gift_card.enabled == false %}
            Este vale presente foi desabilitado
          {% elsif gift_card.expired %}
            Este vale presente expirou em {{ gift_card.expires_on | date: '%d/%m/%Y' }}
          {% endif %}
        </p>
      {% endif %}
    </div>

    <!-- Gift Card Body -->
    <div class="gift-card-body">
      <!-- Gift Card Code -->
      <div class="gift-card-code">
        <button 
          class="copy-button" 
          onclick="copyToClipboard('{{ gift_card.code }}')"
          title="Copiar código"
        >
          <i data-lucide="copy" style="width: 1rem; height: 1rem;"></i>
        </button>
        
        <div class="gift-card-code-label">Código do Vale Presente</div>
        <div class="gift-card-code-value">{{ gift_card.code | format_code }}</div>
      </div>

      <!-- Gift Card Information -->
      <div class="gift-card-info">
        <div class="info-item">
          <span class="info-label">Valor inicial</span>
          <span class="info-value">{{ gift_card.initial_value | money }}</span>
        </div>
        
        <div class="info-item">
          <span class="info-label">Saldo atual</span>
          <span class="info-value">{{ gift_card.balance | money }}</span>
        </div>
        
        {% if gift_card.customer %}
          <div class="info-item">
            <span class="info-label">Para</span>
            <span class="info-value">{{ gift_card.customer.email }}</span>
          </div>
        {% endif %}
        
        {% if gift_card.expires_on %}
          <div class="info-item">
            <span class="info-label">Data de expiração</span>
            <span class="info-value">{{ gift_card.expires_on | date: '%d/%m/%Y' }}</span>
          </div>
        {% endif %}
      </div>

      <!-- Instructions -->
      <div style="background: hsl(var(--background)); border-radius: 0.75rem; padding: 1.5rem; margin-bottom: 2rem;">
        <h3 style="color: hsl(var(--foreground)); margin-bottom: 1rem; font-size: 1.125rem; font-weight: 600;">
          <i data-lucide="info" style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem; display: inline-block; vertical-align: middle;"></i>
          Como usar seu vale presente
        </h3>
        <ol style="color: hsl(var(--muted-foreground)); font-size: 0.875rem; line-height: 1.6; padding-left: 1rem;">
          <li style="margin-bottom: 0.5rem;">Navegue pela nossa loja e adicione os produtos desejados ao carrinho</li>
          <li style="margin-bottom: 0.5rem;">No checkout, cole o código do vale presente no campo indicado</li>
          <li style="margin-bottom: 0.5rem;">O valor será automaticamente descontado do total</li>
          <li>Se o valor da compra for menor que o vale, o saldo restante ficará disponível para uso futuro</li>
        </ol>
      </div>

      <!-- Actions -->
      <div class="gift-card-actions">
        <a href="{{ shop.url }}" class="btn btn-primary">
          <i data-lucide="shopping-bag" style="width: 1rem; height: 1rem;"></i>
          Usar Agora
        </a>
        
        <button onclick="window.print()" class="btn btn-outline">
          <i data-lucide="printer" style="width: 1rem; height: 1rem;"></i>
          Imprimir
        </button>
        
        <button onclick="shareGiftCard()" class="btn btn-outline">
          <i data-lucide="share" style="width: 1rem; height: 1rem;"></i>
          Compartilhar
        </button>
      </div>
    </div>
  </div>

  <!-- Success Message -->
  <div id="copySuccess" style="
    position: fixed; 
    top: 2rem; 
    right: 2rem; 
    background: hsl(var(--primary)); 
    color: white; 
    padding: 1rem 1.5rem; 
    border-radius: 0.5rem; 
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 1000;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  ">
    <i data-lucide="check" style="width: 1rem; height: 1rem;"></i>
    <span>Código copiado!</span>
  </div>

  <script>
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(function() {
        showCopySuccess();
      }).catch(function() {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        showCopySuccess();
      });
    }

    function showCopySuccess() {
      const successEl = document.getElementById('copySuccess');
      successEl.style.transform = 'translateX(0)';
      
      setTimeout(() => {
        successEl.style.transform = 'translateX(100%)';
      }, 2000);
    }

    function shareGiftCard() {
      if (navigator.share) {
        navigator.share({
          title: 'Vale Presente miçangaria',
          text: `Recebi um vale presente da miçangaria no valor de {{ gift_card.balance | money }}!`,
          url: window.location.href
        });
      } else {
        copyToClipboard(window.location.href);
      }
    }

    // Initialize Lucide icons
    document.addEventListener('DOMContentLoaded', function() {
      lucide.createIcons();
    });
  </script>
</body>
</html>
