<header class="bg-card shadow-lg border-b" style="border-color: hsl(var(--border));">
  <div class="container">
    <!-- Desktop Layout -->
    <div class="hidden md-flex items-center justify-between py-4" style="gap: 1rem;">
      <!-- Logo -->
      <a href="/" class="headline text-primary" style="font-size: 2rem; text-decoration: none; transition: color 0.3s ease;">
        miçangaria
      </a>
      
      <!-- Search Bar -->
      <form action="/search" method="get" class="flex-1" style="max-width: 28rem; margin: 0 1rem;">
        <div style="position: relative; display: flex;">
          <input 
            type="text" 
            name="q" 
            placeholder="Buscar produtos..." 
            class="input"
            style="padding-right: 3rem; background: hsl(var(--background)); border-color: hsl(var(--primary) / 0.2);"
          >
          <button 
            type="submit" 
            class="btn-primary"
            style="position: absolute; right: 0.375rem; top: 50%; transform: translateY(-50%); padding: 0.75rem; display: flex; align-items: center; justify-content: center;"
          >
            <i data-lucide="search" style="width: 1rem; height: 1rem;"></i>
          </button>
        </div>
      </form>
      
      <!-- Navigation -->
      <nav>
        <ul class="flex items-center" style="gap: 1.5rem; list-style: none;">
          <li>
            <a href="/collections/all" class="flex items-center text-foreground" style="text-decoration: none; transition: color 0.3s ease; gap: 0.25rem;">
              <i data-lucide="shopping-bag" style="width: 1.25rem; height: 1.25rem;"></i>
              <span>Produtos</span>
            </a>
          </li>
          <li>
            <a href="/pages/style-advisor" class="flex items-center text-foreground" style="text-decoration: none; transition: color 0.3s ease; gap: 0.25rem;">
              <i data-lucide="sparkles" style="width: 1.25rem; height: 1.25rem;"></i>
              <span>Consultor de Estilo</span>
            </a>
          </li>
          <li>
            <a href="/pages/about" class="flex items-center text-foreground" style="text-decoration: none; transition: color 0.3s ease; gap: 0.25rem;">
              <i data-lucide="info" style="width: 1.25rem; height: 1.25rem;"></i>
              <span>Sobre Nós</span>
            </a>
          </li>
          <li>
            <a href="/cart" class="flex items-center text-foreground" style="text-decoration: none; transition: color 0.3s ease; gap: 0.25rem;">
              <i data-lucide="shopping-cart" style="width: 1.25rem; height: 1.25rem;"></i>
              <span id="cart-count">{{ cart.item_count }}</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Mobile Layout -->
    <div class="md-hidden" style="padding: 1rem 0;">
      <!-- First row: Logo and compact menu -->
      <div class="flex items-center justify-between mb-4">
        <a href="/" class="headline text-primary" style="font-size: 1.5rem; text-decoration: none;">
          miçangaria
        </a>
        
        <nav>
          <ul class="flex items-center" style="gap: 0.75rem; list-style: none;">
            <li>
              <a href="/collections/all" class="text-foreground p-2" style="text-decoration: none;">
                <i data-lucide="shopping-bag" style="width: 1.25rem; height: 1.25rem;"></i>
              </a>
            </li>
            <li>
              <a href="/pages/style-advisor" class="text-foreground p-2" style="text-decoration: none;">
                <i data-lucide="sparkles" style="width: 1.25rem; height: 1.25rem;"></i>
              </a>
            </li>
            <li>
              <a href="/pages/about" class="text-foreground p-2" style="text-decoration: none;">
                <i data-lucide="info" style="width: 1.25rem; height: 1.25rem;"></i>
              </a>
            </li>
            <li>
              <a href="/cart" class="text-foreground p-2" style="text-decoration: none; position: relative;">
                <i data-lucide="shopping-cart" style="width: 1.25rem; height: 1.25rem;"></i>
                {% if cart.item_count > 0 %}
                  <span style="position: absolute; top: 0; right: 0; background: hsl(var(--destructive)); color: white; border-radius: 50%; width: 1rem; height: 1rem; display: flex; align-items: center; justify-content: center; font-size: 0.625rem;">{{ cart.item_count }}</span>
                {% endif %}
              </a>
            </li>
          </ul>
        </nav>
      </div>
      
      <!-- Second row: Search bar -->
      <form action="/search" method="get">
        <div style="position: relative; display: flex;">
          <input 
            type="text" 
            name="q" 
            placeholder="Buscar produtos..." 
            class="input"
            style="padding-right: 3rem; background: hsl(var(--background)); border-color: hsl(var(--primary) / 0.2);"
          >
          <button 
            type="submit" 
            class="btn-primary"
            style="position: absolute; right: 0.375rem; top: 50%; transform: translateY(-50%); padding: 0.75rem; display: flex; align-items: center; justify-content: center;"
          >
            <i data-lucide="search" style="width: 1rem; height: 1rem;"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</header>
